/* pages/about/about.wxss */
image {
  width: 100%;
  height: 300rpx;
  margin-bottom: 50rpx;
}
/* 线 */
.line {
  height: 4rpx;
  width: 100%;
  background-color: #F2F2F2;
}
.group {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 1rem;
  display: flex;
}
.group image {
  width: 40rpx;
  height: 40rpx;
  padding: 30rpx 30rpx 30rpx 20rpx;
}
.group text {
  color: #333333;
}
/* 小红点 */
.red-dot {
  position: absolute;
  top: 38%;
  left: 89%;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid red;
  border-radius: 50%;
  background-color: red; 
}